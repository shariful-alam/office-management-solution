<% @number = expenses.offset + 1 %>
<div class="table-responsive-sm">
  <table class="table table-bordered">
    <thead>
    <tr>
      <th>Sl</th>
      <th>Name</th>
      <th>Employee</th>
      <th>Cost</th>
      <th>Category</th>
      <th>Expense Date</th>
      <th style="text-align: center;">Action</th>
    </tr>
    </thead>
    <% expenses.each do |expense| %>
      <%= render partial: 'expenses/action', locals: {expense: expense} %>
    <% end %>
  </table>
</div>
